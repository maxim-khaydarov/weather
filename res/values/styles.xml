<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="tempStyle" parent="@android:style/TextAppearance.Large">	    
	    <item name="android:textColor">#2E9AFE</item>	   	   
	    <item name="android:textStyle">bold</item>	   
	</style>	
    
   
   <style name="tempMin" parent="@android:style/TextAppearance.Medium">	    
	    <item name="android:textColor">#0000FF</item>	   	   	    
   </style>	

   <style name="tempMax" parent="@android:style/TextAppearance.Medium">	    
	    <item name="android:textColor">#FF0000</item>	   	   	    
   </style>	

   
   <style name="valData" parent="@android:style/TextAppearance.Medium">	    
	    <item name="android:textColor">#74DF00</item>	
	    <item name="android:textStyle">bold</item>   	   	    
   </style>	
   
   <color name="white">#fff</color>
	<color name="transparent">@android:color/transparent </color>
	<color name="black">#000 </color>
	<color name="dark_blue">#24223d</color>
	<color name="blue_fon">#413f60</color>
	<color name="blue">#55a9d2</color>
	<color name="blue_day">#c4e4f3</color>
	
	<style name="TwoWayView">
    <item name="android:orientation">horizontal</item>
</style>

	
	<color name="default_edgeeffect_color">@android:color/transparent</color>
	
	<style name="ShadowText">
    <item name="android:textColor">@color/white</item>
    <item name="android:shadowColor">#50000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1</item>
  </style>
   
</resources>