<?xml version="1.0" encoding="utf-8"?>
<set android:interpolator="@android:anim/linear_interpolator"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha android:duration="15000" android:fromAlpha="1.0" android:toAlpha="0.0" 
        android:repeatCount="infinite"
        android:repeatMode="restart"/>

    <translate android:duration="15000" android:fromXDelta="100.0%" android:toXDelta="-100%" android:fromYDelta="0.0" android:toYDelta="0.0" 
        android:repeatCount="infinite"
        android:repeatMode="restart"/>
</set>